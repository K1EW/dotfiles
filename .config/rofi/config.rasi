configuration {
    modes: "window,drun,monitor";
    font: "JetBrainsMono Nerd Font 12";
    show-icons: true;
    icon-theme: "Papirus";
    display-window: "🗂️ Window";
    display-drun: "🚀 Application";
    display-monitor: "🖥️ Monitor setup";
    kb-mode-next: "Super+Tab";
    timeout {
        action: "kb-cancel";
        delay:  0;
    }
    filebrowser {
        directories-first: true;
        sorting-method: "name";
    }
}

@theme "/usr/share/rofi/themes/gruvbox-dark.rasi"
